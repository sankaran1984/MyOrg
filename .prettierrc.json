{
    "trailingComma": "none",
    "singleQuote": true,
    "tabWidth": 4,
    "printWidth": 120,
    "overrides": [
        {
            "files": "**/lwc/**/*.html",
            "options": { "parser": "lwc" }
        },
        {
            "files": "*.{page,component}",
            "options": { "parser": "html" }
        },
        {
            "files": "*.cmp",
            "options": { "parser": "html", "printWidth": 500 }
        },
        {
            "files": "*.xml",
            "options": { "printWidth": 500, "xmlSelfClosingSpace": false }
        }
    ]
}
